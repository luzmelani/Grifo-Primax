    public void MENUPRINCIPAL() {
        int opcion;
        do {
            System.out.println("----MULTISERVICIOS PRIMAX----");
            System.out.println("1. VENTA DE COMBUSTIBLE");
            System.out.println("2. TALLER AUTOMOTRIZ");
            System.out.println("3. LAVADO DE AUTOS");
            System.out.println("4. SNACKS");
            System.out.println("5. PREVISUALIZAR SUS COMPRAS");
            System.out.println("6. FINALIZAR COMPRA");
            System.out.println("0. SALIR");
            System.out.println("SELECCIONE UNA OPCION: ");
            opcion = bob.nextInt();
            System.out.println("----------------------------------------");
            bob.nextLine();
            switch (opcion) {
                case 0:
                    System.out.println("USTED ESTA SALIENDO DEL PROGRAMA.");
                    System.exit(0);
                    break;
                case 1:
                    VENTADECOMBUSTIBLE();
                    break;
                case 2:
                    TALLERAUTOMOTRIZ();
                    break;
                case 3:
                    LAVADODEAUTOS();
                    break;
                case 4:
                    SNACKS();
                    break;
                case 5:
                    PREVIEW();
                case 6:
                    finVenta();
                default:
                    System.out.println("¬°OPCION NO VALIDA!");
            }
        }
        while (opcion != 0);
    }
    public void borrarloquetenganestosAllLists() {
        primaxcombustible.clear();
        primaxautomotriz.clear();
        primaxautolavado.clear();
        primaxsnacks.clear();

        primaxgastoscombustible.clear();
        primaxgastosautomotriz.clear();
        primaxgastosautolavado.clear();
        primaxgastossnacks.clear();
    }
    public void finVenta() {
        System.out.println("Usted deve pagar un total general de: " + Sumatorias());
        int omarr;
        do {
            System.out.println("Metodos de Pago: ");
            System.out.println("1. Pago en Efectivo");
            System.out.println("2. Pago en Yape");
            System.out.println("3. Pago en Tarjeta");
            System.out.println("0. Regresar");
            System.out.println("Ingrese una opcion: ");
            omarr = bob.nextInt();
            bob.nextLine();
            switch (omarr) {
                case 1:
                    System.out.println("Ingrese la cantidad a pagar: ");
                    double loquedio = bob.nextDouble();
                    bob.nextLine();
                    while (loquedio < Sumatorias()) {
                        double  la= Sumatorias() - loquedio;
                        System.out.println("Te falta: " + la);
                        System.out.println("Ingresa la cantidad faltante: ");
                        double lar = bob.nextDouble();
                        loquedio += la;
                    }
                    System.out.println("Gracias por su compra");
                    BOLETADEVENTA();

                    break;
                case 2:
                    System.out.println("Ingrese el numero de Celular que yapeara: ");
                    String celular = bob.nextLine();

                    int numeroDigitoscelular = celular.length();

                    if (numeroDigitoscelular != 9) {
                        System.out.println("El numero de celular deve ser 9 d√≠gitos.");
                        break;
                    }
                    System.out.println("Ingrese el codigo de aprobacion de 6 digitos: ");
                    String codigo = bob.nextLine();

                    int numeroDigitoscodigo = codigo.length();

                    if (numeroDigitoscodigo != 6) {
                        System.out.println("El c√≥digo de aprobaci√≥n debe tener exactamente 6 d√≠gitos.");
                    } else {
                        System.out.println("Gracias por su compra :D");
                        BOLETADEVENTA();
                    }

                    break;
                case 3:
                    System.out.println("Ingrese el numero de Tarjeta: ");
                    String numeroTarjeta = bob.nextLine();
                    int numeroDigitosnumeroTarjeta = numeroTarjeta.length();

                    if (numeroDigitosnumeroTarjeta != 16) {
                        System.out.println("Los numeros de tarjeta deven ser 16 digitos...");
                        break;
                    }
                    System.out.println("Ingrese el mes de vencimiento: ");
                    String mes = bob.nextLine();

                    System.out.println("Ingrese el a√±o de vencimiento: ");
                    int fechaVencimiento = bob.nextInt();
                    bob.nextLine();
                    String numerodecaracteresdela√±o = String.valueOf(fechaVencimiento);
                    int numeroDigitos = numerodecaracteresdela√±o.length();
                    if (numeroDigitos != 4) {
                        System.out.println("Deven ser 4 los digitos del a√±o...");
                        break;
                    }

                    if (fechaVencimiento < 2024){
                        System.out.println("La tarjeta expiro...");
                        break;
                    }
                    if (fechaVencimiento >= 2024){
                        System.out.println("La tarjeta aun no expiro continue üôÉ");
                    }

                    System.out.println("Ingrese el CVV de la tarjeta :");
                    String cvv = bob.nextLine();
                    int numeroDigitosnumerocvv = cvv.length();
                    if (numeroDigitosnumerocvv != 3){
                        System.out.println("Deven ser 3 los digitos del CVV");
                        break;
                    }

                    System.out.println("Gracias por su compra");
                    BOLETADEVENTA();
                    break;
                case 0:
                    System.out.println("Estas regresando");
                    break;
                default:
                    System.out.println("Fuera de rango");
                    break;
            }

        } while (omarr != 0);

    }
    public void PREVIEW() {

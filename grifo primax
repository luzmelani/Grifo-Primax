    public void preview() {
        System.out.println("|========================================================================|");
        System.out.println(" Servicios adquiridos de primax combustible");

        System.out.println("| N¬∞| DESCRIPCION DE PRODUCTOS  ");
        for (String primaxcombustible : primaxcombustible) {
            System.out.println(primaxcombustible);
        }
        System.out.println("|========================================================================|");
        System.out.println(" Servicios adquiridos de primax automotriz");

        System.out.println("| N¬∞| DESCRIPCION DE PRODUCTOS  ");
        for (String primaxautomotriz : primaxautomotriz) {
            System.out.println(primaxautomotriz);
        }
        System.out.println("|========================================================================|");
        System.out.println(" Servicios adquiridos de primax autolavado");

        System.out.println("| N¬∞| DESCRIPCION DE PRODUCTOS  ");
        for (String primaxautolavado : primaxautolavado) {
            System.out.println(primaxautolavado);
        }
        System.out.println("|========================================================================|");
        System.out.println(" Servicios adquiridos de primax snacks");

        System.out.println("| N¬∞| DESCRIPCION DE PRODUCTOS  ");
        for (String primaxsnacks : primaxsnacks) {
            System.out.println(primaxsnacks);
        }

        System.out.println("|========================================================================|");
        System.out.println("GASTOS TOTALES");
        double igv = 0.18 * Sumatorias();
        double totalPagar = Sumatorias() + igv;

        System.out.println("| SUB TOTAL     : " + String.format("%.2f", Sumatorias()));
        System.out.println("| IGV           : " + String.format("%.2f", igv));
        System.out.println("| TOTAL A PAGAR : " + String.format("%.2f", totalPagar));

        System.out.println("|========================================================================|");
    }
    public double Sumatorias() {
        totalgeneral = 0;

        for (Double precio1 : primaxgastoscombustible) {
            totalgeneral += precio1;
        }
        for (Double precio2 : primaxgastosautomotriz) {
            totalgeneral += precio2;
        }
        for (Double precio3 : primaxgastosautolavado) {
            totalgeneral += precio3;
        }
        for (Double precio4 : primaxgastossnacks) {
            totalgeneral += precio4;
        }

        return totalgeneral;

//        double totalCombustible = 0;
//        double totalAutomotriz = 0;
//        double totalAutolavado = 0;
//        double totalSnacks = 0;
//
//        double totalGeneral = totalCombustible + totalAutomotriz + totalAutolavado + totalSnacks;
//        System.out.println("Total general: " + totalGeneral);
//
//        return totalGeneral;
    }
    public void VENTADECOMBUSTIBLE() {
        carrito_combustible.add(0.0);
        do {
            System.out.println("BIENVENIDO A GRIFO PRIMAX");
            System.out.println("SELECCIONE EL TIPO DE COMBUSTIBLE QUE DESEA");
            System.out.println("1. GASOLINA REGULAR: $.10.45");
            System.out.println("2. GASALINA PREMIUM: $.13.17");
            System.out.println("3. DIESEL S-50: $.12.94");
            System.out.println("0. REGRESAR");
            System.out.println("SELECCIONE UNA OPCION: ");
            opcion = bob.nextInt();
            System.out.println("----------------------------------------");
            switch (opcion) {
                case 1:
                    System.out.println("INGRESE LA CANTIDAD DE GALONES QUE DESEA: ");
                    cantidad = bob.nextDouble();
                    System.out.println("UD.SELECCIONO " + cantidad + " GALONES");
                    precioTotal = cantidad * 10.45;
                    primaxcombustible.add("| " + cantidad + "| GASOLINA REGULAR $.10.45");
                    primaxgastoscombustible.add(precioTotal);
                    carrito_combustible.set(opcion-1,carrito_combustible.get(opcion-1)+cantidad);
                    break;
                case 2:
                    System.out.println("INGRESE LA CANTIDAD DE GALONES QUE DESEA: ");
                    cantidad = bob.nextDouble();
                    precioTotal = cantidad * 13.17;

                    primaxcombustible.add("| " + cantidad + "| GASOLINA PREMIUM $.13.17");
                    primaxgastoscombustible.add(precioTotal);
                    break;
                case 3:
                    System.out.println("INGRESE LA CANTIDAD DE GALONES QUE DESEA: ");
                    cantidad = bob.nextDouble();
                    precioTotal = cantidad * 12.94;

                    primaxcombustible.add("| " + cantidad + "| DIESEL S-50 $.12.94");
                    primaxgastoscombustible.add(precioTotal);
                    break;
                case 0:
                    System.out.println("USTED ESTA REGRESANDO AL MENU");

                    break;
                default:
                    System.out.println("¬°OPCION NO VALIDA!");
            }
            bob.nextLine();


        }
        while (opcion != 0);
    }
    public void TALLERAUTOMOTRIZ() {
        int opcion;
        do {
            System.out.println("BIENVENIDO AL TALLER DE MULTISERVICIOS PRIMAX");
            System.out.println("TENEMOS LOS SIGUIENTES SERVICIOS:");
            System.out.println("1: CAMBIO DE ACIETE");
            System.out.println("2: MANTENIMIENTO FILTROS");
            System.out.println("0: SALIR DEL TALLER");
            System.out.println("ELIJA ENTRE ESTAS OPCIONES:");
            opcion = bob.nextInt();
            System.out.println("----------------------------------------");
            switch (opcion) {
                case 1:
                    CAMBIODEACEITE();
                    break;
                case 2:
                    LIMPIEZADEFILTROSVEHICULAR();
                    break;
                case 0:
                    System.out.println("GRACIAS POR SU VISITA.");
                    MENUPRINCIPAL();
                    break;
                default:
                    System.out.println("¬°OPCION NO VALIDA!");
            }
        }
        while (opcion != 0);
    }
    public void CAMBIODEACEITE() {
        System.out.println("----CAMBIOS DE ACEITES PRIMAX----");
        System.out.println("1: ACEITE PREMIUM: $.249.90");
        System.out.println("2: ACEITE SINTETICO: $189.90");
        System.out.println("3: ACEITE CONVENCIONAL: $.149.90");
        System.out.println("4: ACEITE REGULAR: $.129.90");
        System.out.println("0: REGRESANDO AL MENU PRINCIPAL");
        System.out.println("SELECCIONE UNA DE ESTAS OPCIONES");
        int cambio;
        cambio = bob.nextInt();
        System.out.println("----------------------------------------");
        switch (cambio) {
            case 1:
                System.out.println("Ingrese la cantidad");
                double cantidad11 = bob.nextDouble();

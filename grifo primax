            System.out.println("4: CHOCOLATE BOM BOM - $.2.00");
            System.out.println("5: ");
            System.out.println("6: EMPANADAS DE CARNE - $.10.00");
            System.out.println("0: REGRESANDO AL MENU");
            System.out.println("INGRESE UNA OPCION: ");
            vladimir = bob.nextInt();
            switch (vladimir) {
                case 1:
                    System.out.println("Ingrese la cantidad de palomitas  de maiz a comprar:");

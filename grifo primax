                    System.out.println("MINUTO " + i);
                }
                System.out.println("GRACIAS POR ESPERAR, HEMOS TERMINADO");
                System.out.println("----------------------------------------");
                TALLERAUTOMOTRIZ();
                break;
            case 2:

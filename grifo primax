    public void BOLETADEVENTA() {
        for (int i = 0; i < primaxcombustible.size(); i++) {
            primaxgastoscombustible.add(0.0);
        }
        try (FileWriter pri = new FileWriter("D:/BOLETADEVENTA.txt")) {
            pri.write("BOLETA DE VENTA\n");
            pri.write("MULTISERVICIOS PRIMAX");
            pri.write("| N¬∞| DESCRIPCION DE PRODUCTOS  \n");
            pri.write("CANTIDAD\tDESCRIPCI√ìN\t\tTOTAL\n");
            for (int i = 0; i < primaxcombustible.size(); i++) {
                double cantidad = carrito_combustible.get(i);
                if (cantidad > 0) {
                    totalgeneral = cantidad * precio[i];
                   pri.write(String.format("%.2f\t\t%s\t\t%.2f\n",cantidad, primaxcombustible.get(i), totalgeneral));
                }
            }
            igv = 0.18 * Sumatorias();
            totalpagar = Sumatorias() - igv;
            pri.write("| SUB TOTAL     : " + String.format("%.2f", Sumatorias()) + "\n");
            pri.write("| IGV           : " + String.format("%.2f", igv) + "\n");
            pri.write("| TOTAL A PAGAR : " + String.format("%.2f", totalpagar) + "\n");

            System.err.println("lista de servicios dados exportada correctamente a D:/BOLETADEVENTA.txt");
        } catch (IOException e) {
            System.err.println("error al exportar la lista");
        }
        borrarloquetenganestosAllLists();
    }


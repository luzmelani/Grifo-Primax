    public void menuDeCargaLavadoLuz() {

        for (int i = 0; i < 2; i++) {
            System.out.println(i + " segundos...");
        }
        System.out.println("Su auto est√° siendo enjabonado üßºüöóüßº");
        for (int i = 0; i < 2; i++) {
            System.out.println(i + " segundos...");
        }
        System.out.println("Su auto est√° siendo enjuagado üöøüöóüöø");
        for (int i = 0; i < 2; i++) {
            System.out.println(i + " segundos...");
        }
        System.out.println("Su auto est√° siendo secado con aire üí®üöóüí®");
        for (int i = 0; i < 6; i++) {
            System.out.println(i + " segundos...");
        }
        System.out.println("Su auto est√° listo ‚ú®üöó‚ú®");
        System.out.println("Gracias por usar nuestro servicio¬†üòä");
        for (int i = 0; i < 2; i++) {
            System.out.println(i + " segundos...");
        }
        System.out.println("Su auto est√° siendo lavado üí¶üöóüí¶");
    }
    public void SNACKS() {
        int vladimir;
        double subtotal;
        do {
            System.out.println("---BIENVENIDO AL MINIMARKET PRIMAX---");
            System.out.println("TENEMOS LOS SIGUIENTES PRODUCTOS");
            System.out.println("1: PALOMITAS DE MAIZ - $.8.00");
            System.out.println("2: PAPAS FRITAS - $.6.00");
